<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="helloworld.Employee" table="employee">
		<id name="id" type="java.lang.Integer">
			<column name="employee_id" />
		</id>
		<property name="firstName" type="java.lang.String">
			<column name="first_name" not-null="true"/>
		</property>
		<property name="surName" type="java.lang.String">
			<column name="sur_name" not-null="true"/>
		</property>
		<property name="jobTitle" type="java.lang.String">
			<column name="job_title" not-null="true"/>
		</property>
		<property name="joiningDate" type="java.util.Date">
			<column name="joining_date" not-null="true"/>
		</property>
		<property name="payAmount" type="java.lang.Integer">
			<column name="pay" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>